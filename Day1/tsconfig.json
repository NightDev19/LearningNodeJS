{
  "compilerOptions": {
    "module": "nodenext",
    "target": "ES2020",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "isolatedModules": true
  },
  "include": ["src/**/*"]
}
